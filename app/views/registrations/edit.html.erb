<form action="/registrations/<%= @registration.id %>/update">
  <div>
    <label for="user_id">user_id</label><br />
    <input id="user_id" name="user_id" value="<%= @registration.user_id  %>" type="text" />
  </div>
  <div>
    <label for="tournament_id">tournament_id</label><br />
    <input id="tournament_id" name="tournament_id" value="<%= @registration.tournament_id  %>" type="text" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>


