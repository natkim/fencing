            <input type="text" class="form-control" placeholder="destination" style="width:450px">
          </div><!-- /input-group -->
        </div>
    </div>
  </div>
 </div>
  <script>
    $('#travel_form').hide()
    $('#travel_hide').hide()
    $('#travel_show').click( function(){
      $('#travel_form').show()
      $('#travel_show').hide()
      $('#travel_hide').show()
    });
    
    $('#travel_hide').click( function(){
      $('#travel_form').hide()
      $('#travel_show').show()
      $('#travel_hide').hide()
    });
  </script>
  
  
  <!-- ****************** end  of travel form *************** -->
  
  
