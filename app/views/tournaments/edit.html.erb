   <div class="container">
  <div class="row">
    
    <div class="page-header">
      <h2>Travel</h2>
    </div>

    <div class="col-md-3">
    </div>
    
    <div class="col-md-3">
    </div>
    
    <div class="col-lg-3">
      <div class="input-group">
        <span class="input-group-addon">
          <input type="checkbox" name="paid" id="paid" value="<%= @travel.paid %>">
        </span>
        <input type="text" class="form-control" placeholder="Paid" style="width:200px">  
      </div><!-- /input-group -->
    </div><!-- /.col-lg-3 -->
    
     <div class="col-lg-3">
       <div class="input-group">
         <input type="text" class="form-control" placeholder="Confirmation #" name="confirmation" id="confirmation" value="<%= @travel.confirmation %>">
       </div><!-- /input-group -->
     </div><!-- /.col-lg-3 -->
    
  </div>
 </div>
  
  <br>
  <br>
  <br>
  
  <div class="container">
    <div class="row">

      
      <div class="col-lg-6">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Airline" style="width:400px" name="airliine" id="airline" value="<%= @travel.airline %>">
        </div><!-- /input-group -->
      </div>
      
       <div class="col-lg-6">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="flight #" style="width:400px" name="flight" id="flight" value="<%= @travel.value %>">
          </div><!-- /input-group -->
        </div><!-- /.col-lg-3 -->
     </div>
   </div>
    
    <br>

  <div class="container">
    <div class="row">
       <div class="col-lg-4">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="destination" style="width:450px" name="destination" id="destination" value="<%= @travel.destination %>">
          </div><!-- /input-group -->
        </div>
    </div>
  </div>
 </div>
  <script>
    $('#travel_form').hide()
    $('#travel_hide').hide()
    $('#travel_show').click( function(){
      $('#travel_form').show()
      $('#travel_show').hide()
      $('#travel_hide').show()
    });
    
    $('#travel_hide').click( function(){
      $('#travel_form').hide()
      $('#travel_show').show()
      $('#travel_hide').hide()
    });
  </script>
  
  
  <!-- ****************** end  of travel form *************** -->
  
  
